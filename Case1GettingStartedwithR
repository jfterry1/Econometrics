#Minutes in March
days_in_march <- 31
hours_in_day <- 24
minutes_in_hour <- 60
minutes_in_day <- hours_in_day * minutes_in_hour
minutes_in_march <- minutes_in_day * days_in_march
cat("Minutes in March:", minutes_in_march)

#Sum
cat("Sum:", sum(4, 1, 2, 4, 6, 9, 6, 10))

